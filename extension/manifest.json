{
	"manifest_version": 2,

	"name": "redflyplugin",
	"description": "This extension helps make the link between linkedin and redfly",
	"version": "0.0.1",

	"icons": { "128": "icon128.png"},

	"content_scripts": [
		{
			"run_at": "document_end",
			"matches": ["http://www.linkedin.com/*", "http://10.0.0.2:5000/*"],
			"js": ["extconf.js", "redflycontent.js"]
		}
	],

	"externally_connectable": {
		  "matches": ["http://10.0.0.2:5000/*"]
	},

	"background": {
		"scripts": ["extconf.js", "redflybackground.js"],
		"persistent": false
	},

	"permissions": [
		"webNavigation",
		"tabs",
		"cookies",
		"storage",
		"http://www.linkedin.com/",
		"http://10.0.0.2:5000/"
	]
}
