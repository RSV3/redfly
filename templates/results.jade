.row-fluid
	div(bindAttr='class=":row-fluid theResults::disabled"')
		.span2
			h4.sort-by SORT BY
		| {{#unless othersorts}}
		.span2
		| {{/unless}}
		.span2(title = 'sort name alphabetically')
			span Alphabetical 
			+view ('App.SortView class="names"')
		| {{#if othersorts}}
		.span2(title = 'how many users know each contact')
			span Influence
			+view ('App.SortView class="influence"')
		.span2(title = 'prioritize contacts you already know')
			span Relationship Strength
			+view ('App.SortView class="proximity"')
		| {{/if}}
		.span2(title = 'sort by chronology of classification')
			span Added Date 
			+view ('App.SortView class="added"')

	+unless ('theResults')
		.loading
			i.icon-spinner.icon-spin
	+if ('theResults')
		| {{#if paging}}
		.row-fluid
			.span7
				ul.pager.toppager
					li.previous
						| {{#if hasPrevious}}<a href="#" {{action previousPage}}>&larr; Prev</a>{{/if}}
					div.pagenums
						| {{plusOne rangeStart}}-{{rangeStop}} {{#if hasNext}}/ {{filteredCount}}{{/if}}
					li.next
						| {{#if hasNext}}<a href="#" {{action nextPage}}>Next &rarr;</a>{{/if}}
			| {{/if}}			
	| {{#each theResults itemViewClass="App.ResultView" itemController="result"}}
	.row-fluid.top
		| {{#if showitall}}
		hr.topexpanded
		{{partial "contact"}}
		hr.botexpanded
		| {{else}}
		.row-fluid
			.span7
				.row-fluid
					.span2.picture
						a(href='#', action='setShowItAll this target="view"')
							| <img class="fullwidth img-rounded" {{bindAttr src="canonicalPicture"}}>
					.span10
						+if('isVip')
							.maybevip
								i.icon-star.icon-2x.fullredstar
						a(href='#', action='setShowItAll this target="view"')
							h3 {{canonicalName}}
						div
							i
								| {{position}}{{#if position}},{{/if}}} {{company}} {{#if yearsExperience}} with {{yearsExperience}} years experience. {{/if}}
						| {{#if lastMail}}
						.row-fluid
							p
								b Last mail:&nbsp;
								span
									+linkTo('profile lastMail.sender') {{lastMail.sender.canonicalName}}
								span
									&nbsp; {{sentdate}}
						| {{/if}}
						| {{#if lastNote}}
						.row-fluid
							.somenote
								b Last note: &nbsp;
								+linkTo('profile lastNote.author') {{lastNote.author.canonicalName}}
								i &nbsp; {{lastNote.body}}
						| {{/if}}						
							
			.span5
				b Knows: &nbsp;
				.search-result.knows
					ul.tags
						{{#each knowsSome}}
						li
							a(href="#", action='clickname this target="view"')
								| {{canonicalName}}
						{{/each}}
				.sometags
					{{#each view.orgTags}}
					a(href="#", bindAttr='class=":label category"', action='clicktag this target="view"')
						span {{body}}
					{{/each}}
					{{#each view.indTags}}
					a(href="#", bindAttr='class=":label category"', action='clicktag this target="view"')
						span {{body}}
					{{/each}}					



		| {{/if}}
	{{/each}}

	+if ('theResults')
		| {{#if paging}}
		.row-fluid
			.span7
				ul.pager
					li.previous
						| {{#if hasPrevious}}<a href="#" {{action previousPage}}>&larr; Prev</a>{{/if}}
					div.pagenums
						| {{plusOne rangeStart}}-{{rangeStop}} {{#if hasNext}}/ {{filteredCount}}{{/if}}
					li.next
						| {{#if hasNext}}<a href="#" {{action nextPage}}>Next &rarr;</a>{{/if}}
		| {{/if}}

