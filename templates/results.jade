.row-fluid

	ul.pager.toppager
		li.previous
			| {{#if theResults.hasPrevious}}<a href="#" {{action previousPage target="theResults"}}>&larr; Prev</a>{{/if}}
		div.pagenums
			| {{#if theResults.total}}{{plusOne theResults.rangeStart}}-{{theResults.rangeStop}}{{/if}}{{#if theResults.hasNext}} / {{theResults.total}}{{/if}}
		li.next
			| {{#if theResults.hasNext}}<a href="#" {{action nextPage target="theResults"}}>Next &rarr;</a>{{/if}}

	+unless ('theResults.paginatedItems')
		.loading
			i.icon-spinner.icon-spin
	| {{#each theResults.paginatedItems itemController="result"}}
	.row-fluid.top
		.row-fluid
			.span8
				.row-fluid
					.span2.picture
						+linkTo('contact this tagName="a"')
							| <img class="fullwidth img-rounded" {{bindAttr src="canonicalPicture"}}>
					.span10
						+if('isVip')
							.maybevip
								i.icon-star.icon-2x.fullredstar
						+linkTo('contact this tagName="a"')
							h3 {{canonicalName}}
						div
							i
								| {{position}}{{#if position}},{{/if}}} {{company}} {{#if yearsExperience}} with {{yearsExperience}} years experience. {{/if}}
						| {{#if lastMail}}
						.row-fluid
							p
								b Last mail:&nbsp;
								span
									+linkTo('profile lastMail.sender') {{lastMail.sender.canonicalName}}
								span
									&nbsp; {{sentdate}}
						| {{/if}}
							
			.span4
				b Knows: &nbsp;
				.search-result.knows
					ul.tags
						| {{#if isKnown}}
						li you
						| {{/if}}
						{{#each knowsSome}}
						li
							+linkTo('profile this')
								| {{canonicalName}}
						{{/each}}

		.row-fluid.clearpic
			| {{#if lastNote}}
			.row-fluid
				.somenote
					b Last note: &nbsp;
					+linkTo('profile lastNote.author') {{lastNote.author.canonicalName}}
					i &nbsp; {{lastNote.body}}
			| {{/if}}
			.row-fluid
				.orgtags
					{{#each orgTags}}
					a(bindAttr='class=":label category"', action='clicktag this target="view"')
						span {{body}}
					{{/each}}
					{{#each indTags}}
					a(bindAttr='class=":label category"', action='clicktag this target="view"')
						span {{body}}
					{{/each}}
	{{/each}}

	ul.pager
		li.previous
			| {{#if theResults.hasPrevious}}<a href="#" {{action previousPage target="theResults"}}>&larr; Prev</a>{{/if}}
		div.pagenums
			| {{#if theResults.total}}{{plusOne theResults.rangeStart}}-{{theResults.rangeStop}}{{/if}}{{#if theResults.hasNext}} / {{theResults.total}}{{/if}}
		li.next
			| {{#if theResults.hasNext}}<a href="#" {{action nextPage target="theResults"}}>Next &rarr;</a>{{/if}}

