	thead
		tr
			th Rank
			th Contributor
			th New
	tbody
		| {{#each laggard itemViewClass="App.LaggardView"}}
		td.pos {{view.pos}}
		td
			+linkTo('profile this')
				span {{canonicalName}}
		td.count {{contactCount}}
		| {{/each}}
