.row-fluid
	h1 All Tags

	| {{#each controller}}
	.row-fluid
		.span6.bodies
			| {{view App.TagView}} 
		.span1
			span.badge.badge-info {{count}}
		.span4
			| Used {{mostRecent}}
	| {{/each}}

	ul.pager
		| {{#if hasPrevious}}
		li.previous
			| <a href="#" {{action previousPage target="controller"}}>&larr; More popular</a>
		| {{/if}}
		| {{#if hasNext}}
		li.next
			| <a href="#" {{action nextPage target="controller"}}>Less popular &rarr;</a>
		| {{/if}}
