// Implicit Bootstrap abstractions.
horizontalMargin = baseLineHeight * 0.5


// Global variables.
smallFontSize = baseFontSize * 0.7
lightBorder = #EEE
organisation = #e51937



// Global styles.
.lead strong
	font-weight normal

.overlay
	position relative
	.popover
		display block	// Bootstrap tries to make popover initial state hidden.
		width auto
		padding 10px
		.nav-header
			padding-left 0

.picture
	position relative
	.img-polaroid
		// TO-DO make these maxes be dependent on bootstrap vars.
		height 180px		// jTNT changed from 200 to 180
		max-width 180px	// jTNT alternatively, we could just skip it?
	.edit
		position absolute
		top 2px
		left 2px
		background-color white
		padding-top 4px
		padding-left 4px
		padding-right 4px
		border-bottom-right-radius 4px




// Utility classes.
.center
	margin-left auto
	margin-right auto

.textcenter
	text-align	center



// Mixins (basically components, with arguements!).
tag(fontSize)
	.tag
		a
		color #666
		display inline-block
		background-color #DEE7F8
		border 1px solid #CAD8F3

		big = fontSize
		little = fontSize * 0.25
		border-radius big little little big

		padding-left fontSize * 0.75
		.body
			padding-right fontSize * 0.25

.tagadmin
	.tag
		margin	2px
	.tags
		.main
			position	relative
			z-index 1
		

tagger(fontSize)
	taggerMargin = fontSize * 0.28
	.tagger
		.main
			line-height fontSize * 1.42
			tag(fontSize)
			position relative
			z-index 1
			.background
				position absolute
				color #eee
				font-size baseFontSize * 6
				z-index -1
				text-align center
				width 100%
			.tag
				margin taggerMargin 0 0 taggerMargin
				.close
					closePadding = fontSize * 0.25
					float none
					font-size inherit
					border-left 1px dotted #1323d6
					padding 0 closePadding 0 closePadding
			.new-tag-form
				margin taggerMargin 0 0 taggerMargin
				height fontSize * 2
				display inline
				.new-tag
					border none
					box-shadow none
					width auto
					margin 0
					background transparent
		.cloud
			margin-top 10px
			a:hover
				text-decoration none



