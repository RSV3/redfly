@import 'jquery.pnotify.default'
@import 'animate'


@import 'nib'




// Bootstrap variables.
baseFontSize = 14px



// Global variables.
lightBorder = 1px solid #EEE
mediumBorder = 1px solid #C6C6C6



// Global styles.
.lead strong
	font-weight normal



// Mixins.
tagger(fontSize)
	taggerMargin = fontSize * 0.28
	closePadding = fontSize * 0.25
	.tagger
		line-height fontSize * 1.42
		.tag
			a
				color #666 // TODO this seems hacky, ask someone at redstar how they do aggressive css overrides
			color #666
			margin taggerMargin 0 0 taggerMargin
			display inline-block
			background-color #DEE7F8
			border 1px solid #CAD8F3

			big = fontSize
			little = fontSize / 4		
			border-radius big little little big

			padding-left fontSize * 0.75
			.body
				margin-right taggerMargin
			.close
				float none
				font-size inherit
				border-left 1px dotted #1323d6
				padding 0 closePadding 0 closePadding
		.new-tag-form
			margin taggerMargin 0 0 taggerMargin
			height fontSize * 2
			display inline
			.new-tag
				border none
				box-shadow none
				width auto
				margin 0




