@import 'jquery.pnotify.default'
@import 'animate'


@import 'nib'




// Bootstrap variables.
baseFontSize = 14px
baseLineHeight = 20px
navbarText = #777
linkColor = #08c


// Implicit Bootstrap abstractions.
horizontalMargin = baseLineHeight / 2


// Global variables.
smallFontSize = baseFontSize / 1.4

lightBorder = 1px solid #EEE
mediumBorder = 1px solid #C6C6C6



// Global styles.
.lead strong
	font-weight normal

.overlay
	position relative
	.popover
		display block	// Bootstrap tries to make popover initial state hidden.
		padding 10px
		.nav-header
			padding-left 0



// Mixins.
tagger(fontSize)
	taggerMargin = fontSize * 0.28
	closePadding = fontSize * 0.25
	.tagger
		.tags
			line-height fontSize * 1.42
			.tag
				a
					color #666 // TODO this seems hacky, ask someone at redstar how they do aggressive css overrides
				color #666
				margin taggerMargin 0 0 taggerMargin
				display inline-block
				background-color #DEE7F8
				border 1px solid #CAD8F3

				big = fontSize
				little = fontSize / 4		
				border-radius big little little big

				padding-left fontSize * 0.75
				.body
					padding-right closePadding
				.close
					float none
					font-size inherit
					border-left 1px dotted #1323d6
					padding 0 closePadding 0 closePadding
			.new-tag-form
				margin taggerMargin 0 0 taggerMargin
				height fontSize * 2
				display inline
				.new-tag
					border none
					box-shadow none
					width auto
					margin 0
		.cloud
			margin-top 10px
			a:hover
				text-decoration none



// Layout.

body
	padding-top 70px	// Make the container go all the way to the bottom of the topbar.

.navbar
	searchMargin = 30px
	.navbar-search
		margin-left searchMargin
	.search-results
		margin-left searchMargin
		display block	// Always show the dropdown.
	.navbar-form .btn
		margin-left 4px
.activity
	background-color white
	min-height 620px
	.nav-header
		text-align center
		margin-bottom 15px
	.summary .own-line
		margin-top 10px
	.feed
		font-size smallFontSize
		tagger(smallFontSize)
		.feed-item
			border-bottom lightBorder
			padding-bottom 10px
			h4
				font-weight 300




// Pages.

