			position relative
			.img-polaroid
				// TO-DO make these maxes be dependent on bootstrap vars.
				max-width 200px
				max-height 200px
			.edit
				position absolute
				top 2px
				left 2px
				background-color white
				padding-top 4px
				padding-left 4px
				padding-right 4px
				border-bottom-right-radius 4px
		.bullhorn
			display inline-block
			margin-right 10px
			font-size 30px
			:hover
				text-decoration none
		h1
			display inline-block
			margin-bottom 0
			margin-right 10px
		h4
			display inline-block
			margin-right 10px
		padding-bottom 30px
		margin-bottom 30px
		border-bottom lightBorder
		// .tab-content
		// overflow visible
		.edit
			.popover
				width 260px
				i
					margin 3px
					margin-top 5px
		.actions
			margin-bottom horizontalMargin
	.lead
		margin-bottom horizontalMargin
	.tag-category
		margin-bottom baseLineHeight
		tagger(baseFontSize)
		.tagger .tags
			min-height 82px
			border mediumBorder	
	blockquote
		small::before
			content normal
	.merge
		.modal
			overflow visible
		.modal-body
			overflow-y visible
			.selections
				margin-top horizontalMargin * 2
				margin-bottom horizontalMargin * 2
			.alert
				margin-bottom 0
		.search .dropdown-menu
			max-width 528px
			margin-top 40px // TO-DO hackily hackface mchackerson

.contacts
	td
		cursor pointer

.classify
	.navbar
		.navbar-inner
			padding-top 8px
		.lead
			display inline-block
			margin-bottom 0
		.already-added
			margin-right 10px
		ul
			display inline-block
			margin 0
			// .skip
			// 	color navbarText
	.star
		text-align center
		font-size 200px
		color #E3170D



// Components.

.search
	.search-results
		display block	// Always show the dropdown.


