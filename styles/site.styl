// Mixins (basically components, with arguements!).
tag(fontSize)
	.tag
		a
		color #999
		display inline-block

		big = fontSize
		little = fontSize * 0.25
		border-radius big little little big

		padding-left fontSize * 0.75
		input
			margin-left	1em
			margin-right	1em
		.body
			padding-right fontSize * 0.25

.tagadmin
	.tags
		.main
			z-index 1


tagger(fontSize)
	taggerMargin = fontSize * 0.28
	.tagger
		.main
			line-height fontSize * 1.42
			tag(fontSize)
			position relative
			z-index 1
			.background
				position absolute
				color #eee
				font-size baseFontSize * 6
				z-index -1
				text-align center
				width 100%
			.tag
				margin taggerMargin 0 0 taggerMargin
				.close
					closePadding = fontSize * 0.25
					float none
					font-size inherit
					border-left 1px dotted #1323d6
					padding 0 closePadding 0 closePadding
			.new-tag-form
				margin taggerMargin 0 0 taggerMargin
				height fontSize * 2
				display inline
				.new-tag
					border none
					box-shadow none
					width auto
					margin 0
					background transparent
		.cloud
			margin-top 10px
			a:hover
				text-decoration none

